<odoo>

    <record id="action_sample_type" model="ir.actions.act_window">
        <field name="name">Sample Types</field>
        <field name="res_model">sample.type</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="view_sample_type_tree" model="ir.ui.view">
        <field name="name">sample.type.tree</field>
        <field name="model">sample.type</field>
        <field name="arch" type="xml">
            <tree string="Sample Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_sample_type_form" model="ir.ui.view">
        <field name="name">sample.type.form</field>
        <field name="model">sample.type</field>
        <field name="arch" type="xml">
            <form string="Sample Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>