<odoo>
    <record id="view_reschedule_visit_wizard_form" model="ir.ui.view">
        <field name="name">reschedule.visit.wizard.form</field>
        <field name="model">reschedule.visit.wizard</field>
        <field name="arch" type="xml">
            <form string="Reschedule Visit">
                <sheet>
                    <group>
                        <field name="visit_id" invisible="1"/>
                        <field name="doctor_id"/>
                        <field name="visit_date"/>
                        <field name="visit_time"/>
                    </group>
                    <footer>
                        <button string="Reschedule" type="object" name="action_reschedule" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>